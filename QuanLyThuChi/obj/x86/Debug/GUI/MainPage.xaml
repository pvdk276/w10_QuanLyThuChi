<Page
    x:Class="QuanLyThuChi.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QuanLyThuChi"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <!--AdaptiveTrigger-->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <!--Phone state-->
                <VisualState x:ConnectionId='1' x:Name="Phone">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MySplitView.CompactPaneLength" Value="0" ></Setter>
                    </VisualState.Setters>
                </VisualState>
                <!--Tablet state-->
                <VisualState x:ConnectionId='2' x:Name="Tablet">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="700"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MySplitView.CompactPaneLength" Value="48" ></Setter>
                        <Setter Target="HamburgerButton.Visibility" Value="Collapsed"></Setter>
                        <Setter Target="abar.VerticalAlignment" Value="Top"></Setter>
                        <Setter Target="txtTotal.VerticalAlignment" Value="Top"></Setter>
                        <Setter Target="txtTotal.HorizontalAlignment" Value="Left"></Setter>
                        <Setter Target="txtTotal.Margin" Value="10,10,0,0"></Setter>
                    </VisualState.Setters>
                </VisualState>
                <!--Desktop state-->
                <VisualState x:ConnectionId='3' x:Name="Desktop">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1366"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MySplitView.CompactPaneLength" Value="48" ></Setter>
                        <Setter Target="MySplitView.IsPaneOpen" Value="True"></Setter>
                        <Setter Target="HamburgerButton.Visibility" Value="Collapsed"></Setter>
                        <Setter Target="abar.VerticalAlignment" Value="Top"></Setter>
                        <Setter Target="txtTotal.VerticalAlignment" Value="Top"></Setter>
                        <Setter Target="txtTotal.HorizontalAlignment" Value="Left"></Setter>
                        <Setter Target="txtTotal.Margin" Value="10,10,0,0"></Setter>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <!--Content-->
        <SplitView x:ConnectionId='4' x:Name="MySplitView" DisplayMode="CompactOverlay"  IsPaneOpen="False" 
                CompactPaneLength="0" OpenPaneLength="230">
            <SplitView.Pane>
                <Grid Background="{ThemeResource SystemControlForegroundAccentBrush}">
                    <Button x:ConnectionId='5' x:Name="HamburgerButton1" FontFamily="Segoe MDL2 Assets" Content="&#xE700;" VerticalAlignment="Top"
                     Width="48" Height="50" Background="Transparent" Foreground="White"                               FontSize="26.667"/>
                    <StackPanel x:ConnectionId='6' x:Name="tapVi" Orientation="Horizontal"                            VerticalAlignment="Top" Margin="0,50,0,0">
                        <Button x:ConnectionId='11' x:Name="btnVi" FontFamily="Segoe MDL2 Assets" Content="&#xE10F;"
                     Width="48" Height="50" Background="Transparent" Foreground="White"/>
                        <TextBlock Text="Tài khoản ví" FontSize="18" VerticalAlignment="Center" Foreground="White"/>
                    </StackPanel>
                    <StackPanel x:ConnectionId='7' x:Name="tapStk" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,100,0,0">
                        <Button x:ConnectionId='10' x:Name="btnStk" FontFamily="Segoe MDL2 Assets" Content="&#xE1D3;"
                         Width="48" Height="50" Background="Transparent" Foreground="White"/>
                        <TextBlock Text="Sổ tiết kiệm" FontSize="18" VerticalAlignment="Center" Foreground="White"/>
                    </StackPanel>
                    <StackPanel x:ConnectionId='8' x:Name="paThietLap" Orientation="Horizontal" VerticalAlignment="Bottom"                           >
                        <Button x:ConnectionId='9' x:Name="btnThietLap" FontFamily="Segoe MDL2 Assets" Content="&#xE713;"
                    		Width="48" Height="50" Background="Transparent" Foreground="White"/>
                        <TextBlock Text="Thiết lập" FontSize="18" VerticalAlignment="Center" Foreground="White"/>
                    </StackPanel>
                </Grid>
            </SplitView.Pane>
            <SplitView.Content>
                <Grid>
                    <Button x:ConnectionId='12' x:Name="HamburgerButton" FontFamily="Segoe MDL2 Assets" Content="&#xE700;" HorizontalAlignment="Left" VerticalAlignment="Top"
                         Width="48" Height="50" Background="Transparent" Foreground="Black"                               Padding="8,0,8,4" FontSize="26.667"/>
                    <Grid x:ConnectionId='13' x:Name="gridMain">
                        <ListView x:ConnectionId='14' x:Name="lstGhiChep" Margin="0,50,0,98"/>
                        <CommandBar x:ConnectionId='15' x:Name="abar" HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
                            <AppBarButton x:ConnectionId='17' x:Name="btnSync" Icon="Sync"  Label="Đồng bộ"                      />
                            <AppBarButton x:ConnectionId='18' x:Name="btnGhiChep" Icon="Add"  Label="Thêm"                         />
                        </CommandBar>
                        <TextBlock x:ConnectionId='16' x:Name="txtTotal" Text="Tổng còn:" Margin="10,0,0,50" VerticalAlignment="Bottom" FontSize="20" FontWeight="Bold" FontStretch="UltraExpanded" Foreground="Red" Height="48"/>
                    </Grid>
                </Grid>
            </SplitView.Content>
        </SplitView>
        <!--Hiển thị popup chi chép-->
        <!--<Popup x:Name="popGhiChep" IsOpen="False" IsLightDismissEnabled="True" VerticalAlignment="Bottom">
            <Popup.ChildTransitions>
                <TransitionCollection>
                    <PaneThemeTransition />
                </TransitionCollection>
            </Popup.ChildTransitions>
            <Border BorderBrush="{StaticResource SystemControlForegroundAccentBrush}" BorderThickness="2" Background="Black" x:Name="RootPopupBorder">
                <StackPanel Orientation="Vertical" Background="Gray" Height="200" Width="150" x:Name="pop" >
                    <StackPanel>
                        <Button x:Name="btnThuTien" Content="Chi tiền" Height="50" HorizontalAlignment="Stretch" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Popup>-->
    </Grid>
</Page>

