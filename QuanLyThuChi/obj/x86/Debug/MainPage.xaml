<Page
    x:Class="QuanLyThuChi.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QuanLyThuChi"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <!--AdaptiveTrigger-->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:ConnectionId='1' x:Name="Phone">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MySplitView.CompactPaneLength" Value="0" ></Setter>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='2' x:Name="Tablet">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="700"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MySplitView.CompactPaneLength" Value="50" ></Setter>
                        <Setter Target="HamburgerButton.Visibility" Value="Collapsed"></Setter>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='3' x:Name="Desktop">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1366"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MySplitView.CompactPaneLength" Value="50" ></Setter>

                        <Setter Target="HamburgerButton.Visibility" Value="Collapsed"></Setter>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <!--Content-->
        <SplitView x:ConnectionId='4' x:Name="MySplitView" DisplayMode="CompactOverlay"  IsPaneOpen="False" 
                CompactPaneLength="0" OpenPaneLength="230">
            <SplitView.Pane>
                <StackPanel Background="{ThemeResource SystemControlForegroundAccentBrush}">
                    <Button x:ConnectionId='5' x:Name="HamburgerButton1" FontFamily="Segoe MDL2 Assets" Content="&#xE700;"
                     Width="50" Height="50" Background="Transparent" Foreground="White"                               FontSize="26.667"/>
                    <StackPanel x:ConnectionId='6' Orientation="Horizontal"                           >
                        <Button x:ConnectionId='9' x:Name="btnVi" FontFamily="Segoe MDL2 Assets" Content="&#xE10F;"
                     Width="50" Height="50" Background="Transparent" Foreground="White"/>
                        <TextBlock Text="Tài khoản ví" FontSize="18" VerticalAlignment="Center" Foreground="White"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button x:ConnectionId='8' x:Name="btnStk" FontFamily="Segoe MDL2 Assets" Content="&#xE1D3;"
                         Width="50" Height="50" Background="Transparent" Foreground="White"/>
                        <TextBlock Text="Sổ tiết kiệm" FontSize="18" VerticalAlignment="Center" Foreground="White"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button x:ConnectionId='7' x:Name="btnThemTaiKhoan" FontFamily="Segoe MDL2 Assets" Content="&#xE292;"
                         Width="50" Height="50" Background="Transparent" Foreground="White"/>
                        <TextBlock Text="Thêm tài khoản mới" FontSize="18" VerticalAlignment="Center" Foreground="White"/>
                    </StackPanel>
                </StackPanel>
            </SplitView.Pane>
            <SplitView.Content>
                <StackPanel>
                    <Button x:ConnectionId='10' x:Name="HamburgerButton" FontFamily="Segoe MDL2 Assets" Content="&#xE700;"
                     Width="50" Height="50" Background="Transparent" Foreground="Black"                               Padding="8,0,8,4" FontSize="26.667"/>
                    <ListView x:ConnectionId='11' x:Name="lstGhiChep" Height="493">

                    </ListView>
                    <Grid Width="359" Height="48">
                        <TextBlock x:ConnectionId='15' x:Name="txtTotal" Text="Tổng còn:" Margin="10,0" FontSize="20" FontWeight="Bold" FontStretch="UltraExpanded" Foreground="Red"/>
                    </Grid>
                    <CommandBar x:ConnectionId='12' x:Name="abar" Margin="0" VerticalAlignment="Top">
                        <AppBarButton x:ConnectionId='13' x:Name="btnSync" Icon="Sync"  Label="Đồng bộ"/>
                        <AppBarButton x:ConnectionId='14' x:Name="btnGhiChep" Icon="Add"  Label="Thêm"/>
                    </CommandBar>
                </StackPanel>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>

